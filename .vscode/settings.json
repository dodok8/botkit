{
  "deno.enable": true,
  "deno.unstable": true,
  "editor.detectIndentation": false,
  "editor.indentSize": 2,
  "editor.insertSpaces": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.sortImports": "always"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.sortImports": "always"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.sortImports": "always"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.sortImports": "always"
    }
  },
  "cSpell.words": [
    "activitypub",
    "botkit",
    "denokv",
    "fanout",
    "fedi",
    "Fedify",
    "fediverse",
    "followee",
    "followees",
    "halfyear",
    "hongminhee",
    "HSTS",
    "inlines",
    "linkify",
    "logtape",
    "Minhee",
    "Misskey",
    "multikey",
    "nodeinfo",
    "phensley",
    "pico",
    "Pixelfed",
    "smallweb",
    "Tailscale",
    "unfollow",
    "unfollowed",
    "unfollowing",
    "unfollows",
    "unliked",
    "unreact",
    "unreacted",
    "uuidv7",
    "vitepress"
  ]
}
